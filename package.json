{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "description": "Fastify + Drizzle + PostgreSQL backend following Clean Architecture.",
  "scripts": {
    "dev": "yarn run migrate && ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p . && copyfiles -u 1 \"src/views/**/*\" dist/",
    "start": "node dist/server.js",
    "start:prod": "node dist/server.js",
    "lint": "eslint --ext .ts src",
    "format": "prettier --write \"src/**/*.ts\"",
    "migrate": "drizzle-kit push",
    "prepare": "husky"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.0.1",
    "@fastify/env": "^5.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@sendgrid/mail": "^8.1.5",
    "@types/colors": "^1.2.4",
    "aws-sdk": "^2.1692.0",
    "bcryptjs": "^3.0.2",
    "boxen": "^8.0.1",
    "bullmq": "^5.56.4",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.2",
    "ejs": "^3.1.10",
    "express-rate-limit": "^8.0.0",
    "fastify": "^5.4.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.4",
    "pg": "^8.16.3",
    "pino-pretty": "^13.0.0",
    "winston": "^3.17.0",
    "zod": "^3.25.74",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/ejs": "^3.1.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.4",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.3.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.19"
  }
}

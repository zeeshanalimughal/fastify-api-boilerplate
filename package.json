{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "description": "Fastify + Drizzle + PostgreSQL backend following Clean Architecture.",
  "scripts": {
    "dev": "yarn run migrate && ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "start:prod": "node dist/server.js",
    "lint": "eslint --ext .ts src",
    "format": "prettier --write \"src/**/*.ts\"",
    "migrate": "drizzle-kit push"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.0.1",
    "@fastify/env": "^5.0.2",
    "@fastify/jwt": "^9.1.0",
    "@fastify/swagger": "^9.5.1",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.0.1",
    "drizzle-orm": "^0.44.2",
    "fastify": "^5.4.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pino-pretty": "^13.0.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.4",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "drizzle-kit": "^0.20.12",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.19"
  }
}
